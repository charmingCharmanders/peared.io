<!doctype html>
<html>

<head>
    <script>
      const protocol = window.location.protocol;
      const hostname = window.location.hostname;
      if ((hostname !== '127.0.0.1' && hostname !== 'localhost') && protocol === 'http:') {
          location.href = location.href.replace('http://', 'https://');
      }
    </script>
    <title>Code with Friends | Peared.io</title>
    <link href="https://fonts.googleapis.com/css?family=Pacifico" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,300,400,600,700,800" rel="stylesheet">
    <link rel="shortcut icon" href="assets/p.ico">
    <link rel="stylesheet" href="assets/login.css">
</head>
<body>
  <div id="main">
    <div id="container">
      <h2 id="logo">Peared.io</h2>
      <h5>code with friends</h5>
      <div id="loginsquare">


        <% if (message.length) { %>
        <div class="alert alert-danger"><span id="error"><%= message %></span></div>
        <% } %>

        <form action='/login' method="post">
          <h4>email</h4>
          <input type="text" name="email" id="input"></input>

          <h4>password</h4>
          <input id="input" type="password" name="password"></input>

          <input class='loginbuttons' id="loginbutton" type="submit" value="log in"></input>
        </form>

        <a href="/auth/github" class='loginbuttons' id="github">sign in with github</a>

        <div class='signupinvite'><a href='/signup' id="signupinvite">sign up for an account</a></div>
      </div>
    </div>
  </div>
</body>

</html>